    <!-- Script para funcionalidade de leitura de texto (Text-to-Speech) -->
    <script>
        let currentUtterance = null;
        let currentButton = null;

        function readSection(sectionId, buttonElement) {
            const sectionElement = document.getElementById(sectionId);
            if (!sectionElement) {
                console.error('Se√ß√£o n√£o encontrada para leitura:', sectionId);
                return;
            }

            // Se j√° houver uma fala em andamento e for do mesmo bot√£o, cancela e reinicia o √≠cone
            if (currentUtterance && speechSynthesis.speaking) {
                speechSynthesis.cancel();
                if (currentButton) {
                    currentButton.querySelector('.play-icon').classList.remove('hidden');
                    currentButton.querySelector('.stop-icon').classList.add('hidden');
                }
                // Se o clique atual for para parar a fala, retorna ap√≥s cancelar
                if (currentButton === buttonElement) {
                    currentUtterance = null;
                    currentButton = null;
                    return;
                }
            }

            // Pega todo o texto vis√≠vel dentro da se√ß√£o
            const textToRead = sectionElement.innerText;

            if ('speechSynthesis' in window) {
                const utterance = new SpeechSynthesisUtterance(textToRead);

                // Tenta encontrar uma voz em portugu√™s do Brasil
                const voices = window.speechSynthesis.getVoices();
                const brazilianVoice = voices.find(voice => voice.lang === 'pt-BR' || voice.lang === 'pt_BR' || voice.name.includes('Brazil') || voice.name.includes('Portuguese (Brazil)'));

                if (brazilianVoice) {
                    utterance.voice = brazilianVoice;
                } else {
                    console.warn('Voz em portugu√™s do Brasil n√£o encontrada, usando voz padr√£o do navegador.');
                }

                utterance.lang = 'pt-BR'; // Define o idioma para portugu√™s do Brasil
                utterance.rate = 1; // Velocidade da fala (1 √© o padr√£o)
                utterance.volume = 1; // Volume (1 √© o m√°ximo)

                // Armazena a utterance e o bot√£o atual para controle
                currentUtterance = utterance;
                currentButton = buttonElement;

                // Altera o √≠cone do bot√£o para "parar"
                buttonElement.querySelector('.play-icon').classList.add('hidden');
                buttonElement.querySelector('.stop-icon').classList.remove('hidden');

                // Evento para quando a fala terminar
                utterance.onend = () => {
                    buttonElement.querySelector('.play-icon').classList.remove('hidden');
                    buttonElement.querySelector('.stop-icon').classList.add('hidden');
                    currentUtterance = null;
                    currentButton = null;
                };

                // Evento para quando a fala for cancelada (ex: por outro clique)
                utterance.oncancel = () => {
                    if (buttonElement) { // Verifica se o bot√£o ainda existe
                        buttonElement.querySelector('.play-icon').classList.remove('hidden');
                        buttonElement.querySelector('.stop-icon').classList.add('hidden');
                    }
                    currentUtterance = null;
                    currentButton = null;
                };

                window.speechSynthesis.speak(utterance);
            } else {
                alert('Desculpe, seu navegador n√£o suporta a funcionalidade de leitura de texto.');
            }
        }
    </script>
